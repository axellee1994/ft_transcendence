{
  // Project metadata
  "name": "transcendence-frontend",
  "version": "1.0.0", 
  "description": "42 Transcendence Frontend",

  // NPM scripts for development and building
  "scripts": {
    // Development script that runs multiple commands concurrently:
    // - TypeScript compiler in watch mode
    // - Copy HTML files
    // - Live development server
    // - Tailwind CSS compiler in watch mode
    "start": "concurrently \"tsc --watch\" \"npm run copy:html\" \"live-server --host=0.0.0.0 --port=3000 --no-browser dist/\" \"tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch\"",
    
    // Production build script:
    // - Compile TypeScript
    // - Build Tailwind CSS
    // - Copy HTML files
    "build": "tsc && tailwindcss -i ./src/styles/input.css -o ./dist/styles.css && npm run copy:html",
    
    // Utility script to copy HTML files to dist folder
    "copy:html": "cp src/index.html dist/"
  },

  // Runtime dependencies (empty as all deps are dev dependencies)
  "dependencies": {},

  // Development dependencies
  "devDependencies": {
    "typescript": "^5.3.3",     // TypeScript compiler
    "tailwindcss": "^3.4.1",    // Tailwind CSS framework
    "live-server": "^1.2.2",    // Development server with live reload
    "concurrently": "^8.2.2"    // Run multiple commands simultaneously
  }
}