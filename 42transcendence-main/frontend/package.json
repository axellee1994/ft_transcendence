{
  "name": "transcendence-frontend",
  "version": "1.0.0",
  "description": "42 Transcendence Frontend",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"npm run copy:html\" \"live-server --host=0.0.0.0 --port=3000 --no-browser dist/\" \"tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --watch\"",
    "build": "tsc && npm run build:css && npm run copy:html",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/styles.css --minify",
    "copy:html": "cp src/index.html dist/",
    "start": "node dist/server.js"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1",
    "live-server": "^1.2.2",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17"
  }
}